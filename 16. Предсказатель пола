import argparse
import sys

parser = argparse.ArgumentParser(
    description="convert integers to decimal system")
parser.add_argument('--barbie', default=50, type=int)
parser.add_argument('--cars', default=50, type=int)
parser.add_argument('--movie', default="other", type=str)



args = parser.parse_args()
a=50
if args.movie=="football":
    a=100
elif args.movie=="melodrama":
    a=0
if  not 0<=args.barbie<=100:
    args.barbie=50
if not 0<=args.cars<=100:
    args.cars=50
boy = (100- args.barbie + args.cars + a)//3
print("boy:", boy)
print("girl:",100-boy)
