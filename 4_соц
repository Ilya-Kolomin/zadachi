class User:
    def __init__(self,name):
        self.name=name
    def send_message(self,user,message):
        pass
    def post(self,message):
        pass
    def info(self):
        return ""
    def describe(self):
        print(self.name,self.info)
class Person(User):
    def __init__(self,name,birthday):
        super().__init__(name)
        self.birthday=birthday
    def info(self):
        return "Дата рождения: "+self.birthday
    def subscribe_user(self,user):
        pass
class Community(User):
    def __init__(self,name,brief):
        super().__init__(name)
        self.brief=brief
    def info(self):
        return 'Описание: '+self.brief
