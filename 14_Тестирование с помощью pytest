import pytest
from yandex_testing_lesson import reverse
def test_empty (): 
    assert reverse('') == ''
def test_wrong_type(): 
    with pytest.raises(TypeError): 
        reverse(42) 
    with pytest.raises(TypeError): 
        reverse([1,2,3])            
def test_one_ch_st():
    assert reverse('a') == 'a'
def test_palindrom():
    assert reverse('aba') =='aba'
def test_stri():
    assert reverse('abcd') =='dcba'

if __name__ == '__main__':
    pytest.main()
